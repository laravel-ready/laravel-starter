{
	"autorun": true,
	"autorun_delay": 2000,
	"auto_kill": true,
	"terminals": [
		{
			"name": "Backend Server Terminal",
			"description": "Running banckend server",
			"focus": false,
			"execute": true,
			"recycle": true,
			"commands": ["php artisan serve"],
			"color": "terminal.ansiGreen"
		},

		{
			"name": "Webpack Mix Terminal",
			"description": "Running webpack server",
			"focus": true,
			"execute": true,
			"recycle": true,
			"commands": ["npm run mix:watch"],
			"color": "terminal.ansiRed"
		},

		{
			"name": "ViteJs Terminal",
			"description": "Running vite server",
			"focus": true,
			"execute": true,
			"recycle": true,
			"commands": ["npm run vite:watch"],
			"color": "terminal.ansiRed"
		}
	]
}
